---
title: 进口花岗岩大板 - 产品展示 - 禹盛石业
layout: 'products'
---

<div class="row">
  <% i = 0 %>
  <% [
    "巴西金Giallo Brazil",
    "凤尾银麻Aran White",
    "古典木纹啡Juparana Classico",
    "加里奥金Carioco Gold",
    "金钻花麻Diamond Giallo",
    "蓝眼睛Blue Eyes",
    "圣地亚哥红Santiago Red",
    "莎利士红Sallisbury Pink",
    "热带绿Tropical Green",
    "木头黄金Wooden Gold",
    "幻彩红Multicolor Red",
    "幻彩绿Paradiso Green"
  ].each do |s| %>
    <% m = s.match /([\u4e00-\u9fa5]+)\s?((\w+\s?)+)(\(\d\))?/ %>
    <% title = I18n.locale == :en ? m[2].split(' ').map(&:capitalize).join(' ') : m[1] %>
    <% img_path = (m[2] + m[4].to_s).chomp(' ').gsub(' ', '_').downcase + '.jpg' %>

    <% if i == 0 %>
      <div class="row">
    <% end %>

    <div class="col-md-3 col-xs-3 thumb">
      <a href="/images/products/granites/imported_slabs/<%= img_path %>" title="<%= title %>" class="fancybox" rel="group">
        <img src="/images/products/granites/imported_slabs/thumbnails/<%= img_path %>" alt="<%= title %>" />
        <div class="title"><%= title %></div>
      </a>
    </div>

    <% if i == 3 %>
      </div>
      <% i = 0 %>
    <% else %>
      <% i += 1 %>
    <% end %>
  <% end %>

  <% unless I18n.locale == :en %>
    <% [
    ].each do |s| %>
      <% m = s.match /([\u4e00-\u9fa5]+)/ %>
      <% title = m[1] %>
      <% img_path = m[1] + '.jpg' %>

      <% if i == 0 %>
        <div class="row">
      <% end %>

      <div class="col-md-3 col-xs-3 thumb">
        <a href="/images/products/granites/imported_slabs/<%= img_path %>" title="<%= title %>" class="fancybox" rel="group">
          <img src="/images/products/granites/imported_slabs/thumbnails/<%= img_path %>" alt="<%= title %>" />
          <div class="title"><%= title %></div>
        </a>
      </div>

      <% if i == 3 %>
        </div>
        <% i = 0 %>
      <% else %>
        <% i += 1 %>
      <% end %>
    <% end %>
  <% end %>
  <% if 0 < i && i < 4 %>
    </div>
  <% end %>
</div>

<div class="row">
  <ul class="page">
    <% current = 2 %>
    <% total = I18n.locale == :en ? 4 : 5 %>
    <% path = "/products/granites/imported_slabs" %>

    <% if current > 1 %>
      <li class="page-item">
        <%= link_to "« #{t('page.first')}", "#{path}.html" %>
      </li>
      <li class="page-item">
        <%= link_to "‹ #{t('page.previous')}", "#{path}#{current > 2 ? "_#{current - 1}" : ""}.html" %>
      </li>
    <% end %>

    <% (1..total).each do |i| %>
      <% if current == i %>
        <li class="page-current"><%= i %></li>
      <% else %>
        <li class="page-item">
          <%= link_to "#{i}", "#{path}#{i > 1 ? "_#{i}" : ""}.html" %>
        </li>
      <% end %>
    <% end %>

    <% if current < total %>
      <li class="page-item">
        <%= link_to "#{t('page.next')} ›", "#{path}_#{current + 1}.html" %>
      </li>
      <li class="page-item">
        <%= link_to "#{t('page.last')} »", "#{path}_#{total}.html" %>
      </li>
    <% end %>
  </ul>
</div>
