---
title: 国产花岗岩 - 产品展示 - 禹盛石业
layout: 'products'
---

<% if I18n.locale == :en %>
  <div class="row">
    <% i = 0; [
      "G300",
      "G355",
      "G361",
      "G364",
      "G367",
      "G368",
      "G381",
      "G386-7",
      "G386-8",
      "G388",
      "G399",
      "G439"
    ].each do |s| %>
      <% m = s.match /(([a-zA-Z0-9()\-]+\s?)+)(\(\d\))?/ %>
      <% title = m[1].split(' ').map(&:capitalize).join(' ') %>
      <% title = title.match(/^G\d{3}/) ? title[0..3] : title %>
      <% img_path = (m[1] + m[3].to_s).chomp(' ').gsub(' ', '_').downcase + '.jpg' %>

      <% if i == 0 %>
        <div class="row">
      <% end %>

      <div class="col-md-3 col-xs-3 thumb">
        <a href="/images/products/granites/chinese/<%= img_path %>" title="<%= title %>" class="fancybox" rel="group">
          <img src="/images/products/granites/chinese/thumbnails/<%= img_path %>" alt="<%= title %>" />
          <div class="title">
            <p><%= title %></p>
          </div>
        </a>
      </div>

      <% if i == 3 %>
        </div>
        <% i = 0 %>
      <% else %>
        <% i += 1 %>
      <% end %>
    <% end %>
    <% if 0 < i && i < 4 %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <ul class="page">
      <% current = 1 %>
      <% total = 5 %>
      <% path = "/products/granites/chinese" %>

      <% if current > 1 %>
        <li class="page-item">
          <%= link_to "« #{t('page.first')}", "#{path}.html" %>
        </li>
        <li class="page-item">
          <%= link_to "‹ #{t('page.previous')}", "#{path}#{current > 2 ? "_#{current - 1}" : ""}.html" %>
        </li>
      <% end %>

      <% (1..total).each do |i| %>
        <% if current == i %>
          <li class="page-current"><%= i %></li>
        <% else %>
          <li class="page-item">
            <%= link_to "#{i}", "#{path}#{i > 1 ? "_#{i}" : ""}.html" %>
          </li>
        <% end %>
      <% end %>

      <% if current < total %>
        <li class="page-item">
          <%= link_to "#{t('page.next')} ›", "#{path}_#{current + 1}.html" %>
        </li>
        <li class="page-item">
          <%= link_to "#{t('page.last')} »", "#{path}_#{total}.html" %>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div class="row">
    <% i = 0; [
      "中国绿China Green JX",
      "中国绿China Green SC",
      "冰花兰Ice Blue",
      "天山红Tianshan Red",
      "山西黑Shanxi Black",
      "惠东红Huidong Red",
      "漳浦黑Zhangpu Black",
      "蒙古黑Mangalia Black",
      "虎皮白Tiger Skin White",
      "虎皮红Tiger Skin Red",
      "虎皮黄Tiger Skin Yellow",
      "西丽红Xili Red (2)"
    ].each do |s| %>
      <% m = s.match /([\u4e00-\u9fa5]*)\s?(([a-zA-Z0-9()\-]+\s?)+)(\(\d\))?/ %>
      <% title = m[1] %>
      <% img_path = (m[2] + m[4].to_s).chomp(' ').gsub(' ', '_').downcase + '.jpg' %>

      <% if i == 0 %>
        <div class="row">
      <% end %>

      <div class="col-md-3 col-xs-3 thumb">
        <a href="/images/products/granites/chinese/<%= img_path %>" title="<%= title %>" class="fancybox" rel="group">
          <img src="/images/products/granites/chinese/thumbnails/<%= img_path %>" alt="<%= title %>" />
          <div class="title">
            <p><%= title %></p>
          </div>
        </a>
      </div>

      <% if i == 3 %>
        </div>
        <% i = 0 %>
      <% else %>
        <% i += 1 %>
      <% end %>
    <% end %>
    <% if 0 < i && i < 4 %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <ul class="page">
      <% current = 1 %>
      <% total = 2 %>
      <% path = "/products/granites/chinese" %>

      <% if current > 1 %>
        <li class="page-item">
          <%= link_to "« #{t('page.first')}", "#{path}.html" %>
        </li>
        <li class="page-item">
          <%= link_to "‹ #{t('page.previous')}", "#{path}#{current > 2 ? "_#{current - 1}" : ""}.html" %>
        </li>
      <% end %>

      <% (1..total).each do |i| %>
        <% if current == i %>
          <li class="page-current"><%= i %></li>
        <% else %>
          <li class="page-item">
            <%= link_to "#{i}", "#{path}#{i > 1 ? "_#{i}" : ""}.html" %>
          </li>
        <% end %>
      <% end %>

      <% if current < total %>
        <li class="page-item">
          <%= link_to "#{t('page.next')} ›", "#{path}_#{current + 1}.html" %>
        </li>
        <li class="page-item">
          <%= link_to "#{t('page.last')} »", "#{path}_#{total}.html" %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
