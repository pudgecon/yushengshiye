<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || t(:welcome) %></title>

    <%= stylesheet_link_tag "normalize", "bootstrap.min", "styles", "jquery.fancybox" %>
    <%= javascript_include_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="container content">
      <%= partial "header" %>

      <div class="row">
        <div class="col-md-3 col-xs-3">
          <ul class="menu" id="menu">
            <li><%= nav_link_to t("introductions.menu.factory"), "/introductions/factory.html" %></li>
            <li><%= nav_link_to t("introductions.menu.machine"), "/introductions/machine.html" %></li>
            <li><%= nav_link_to t("introductions.menu.quarry"), "/introductions/quarry.html" %></li>
          </ul>
        </div>
        <div class="col-md-9 col-xs-9">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= partial "footer" %>

    <script type="text/javascript">
      $(function() {
        $(".fancybox").fancybox({
          prevEffect: 'fade',
          nextEffect: 'fade',
          openEffect: 'fade'
        });
      });
    </script>
  </body>
</html>
