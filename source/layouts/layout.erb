<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || t(:welcome) %></title>

    <%= stylesheet_link_tag "normalize", "bootstrap.min", "styles", "jquery.fancybox" %>
    <%= javascript_include_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="container content">
      <%= partial "header" %>

      <%= yield %>
    </div>

    <%= partial "footer" %>

    <script type="text/javascript">
      $(function() {
        $(".fancybox").fancybox({
          prevEffect: 'fade',
          nextEffect: 'fade',
          openEffect: 'fade'
        });
      });
    </script>
  </body>
</html>
